<!DOCTYPE html>
<html lang="<%= __('lang') %>">

<head>
    <meta charset="UTF-8">
    <title>Collectio - <%= __('signIn') %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <%- include('../partials/styles') %>
    <%- include('../partials/icons') %>
</head>

<body class="d-flex flex-column min-vh-100">
<!-- Begin Header -->
<%- include('../partials/header'); %>
<!-- End Header -->

<!-- Begin Content -->
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="border-0 rounded-3 my-5"> <!-- card shadow -->
                <div class="card-body p-4 p-sm-5">
                    <h1 class="text-center mb-5 fw-light fs-5"><%= __('signIn') %></h1> <!-- card-title -->
                    <div class="d-grid mb-2">
                        <a class="btn btn-apple btn-login" role="button" href="/login/apple"> <!-- text-uppercase fw-bold -->
                            <i class="fab fa-apple me-2"></i> <%= __('signInApple') %>
                        </a>
                    </div>
                    <div class="d-grid mb-2">
                        <a class="btn btn-google btn-login" role="button" href="/login/google"> <!-- text-uppercase fw-bold -->
                            <i class="fab fa-google me-2"></i> <%= __('signInGoogle') %>
                        </a>
                    </div>
                    <div class="d-grid">
                        <a class="btn btn-microsoft btn-login" role="button" href="/login/microsoft"> <!-- text-uppercase fw-bold -->
                            <i class="fab fa-microsoft me-2"></i> <%= __('signInMicrosoft') %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content -->

<!-- Begin Footer -->
<%- include('../partials/footer'); %>
<!-- End Footer -->

<!-- Begin Scripts -->
<%- include('../partials/scripts') %>
<!-- End Scripts -->
</body>

</html>